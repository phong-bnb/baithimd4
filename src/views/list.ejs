
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous">
    <title>student HomePage</title>
</head>
<body>
<div class="container mt-2">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/student/list">Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/student/list">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            student Manager
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/student/list">List student</a></li>
                            <li><a class="dropdown-item" href="/student/create">Add New student</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class=" card col-8 mt-4 mx-auto">
        <div class="card-header">
            <form class="w-50" id="formSubmitStudentByClass" method="post">
                <select class="form-select me-2" id="selectByClass" name="classroom" onchange="submitForm()">
                    <option value="" disabled selected>-- Danh Sách Sinh viên theo lớp--</option>
                    <%classrooms.forEach(item=>{%>
                    <option value="<%=item._id%>"><%=item.name%></option>
                    <%})%>
                </select>
            </form>
            <div class="card">
                <table class="table table-striped table-bordered table-hover text-center align-middle">
                    <thead>
                    </tr>
                    <tr><div class="d-flex justify-content-between"><h2>Danh sách sinh viên</h2> <a href="/student/create" class="btn btn-primary ">Thêm mới Sinh viên</a>
                    <a href=""></a></div></tr>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Mã học sinh</th>
                        <th scope="col">Lớp</th>
                        <th scope="col" >Điểm thực hành </th>
                        <th scope="col" >Điểm lý thuyết </th>
                        <th scope="col">Đánh giá</th>
                        <th scope="col"> Mô tả</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%if(students.length ==0){%>
                        <h2> No data</h2>
                    <%}%>
                    <% students.forEach((item, index)=>{ %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><a href="/student/<%= item._id %>/detail"><%= item.name %></a></td>
                            <td><%= item._id %>></td>
                            <td><%= item.classroom.name %></td>
                            
                            <td><%= item.pointTH %></td>
                            <td><%= item.pointLT %></td>
                            <td><%= item.evaluated %></td>
                            <td><%= item.description %></td>
                            

                            <td>
                                <a href="/student/<%= item._id %>/update" class="btn btn-primary"> Update </a>
                                <a href="/student/<%= item._id %>/delete" class="btn btn-danger"
                                   onclick="return confirm('Are you sure?')"> Delete </a>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>

<script
        src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
<script>
    function submitForm(){
        document.getElementById("formSubmitStudentByClass").submit()
    }
</script>
</html>